@model MyStudentsGrades.Models.Activity

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Activity</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quarter" class="control-label"></label>
                <select asp-for="Quarter" class="form-control">
                    <option value="First">First</option>
                    <option value="Second">Second</option>
                    <option value="Third">Third</option>
                    <option value="Fourth">Fourth</option>
                </select>

                <span asp-validation-for="Quarter" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="ClassroomId" />

            <button class="btn btn-primary" type="submit" name="addActivities" value="false">
                Add One
            </button>
            Or
            <button class="btn btn-primary" type="submit" name="addActivities" value="true">
                Add More
            </button>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Classrooms" asp-action="CompleteInfo" asp-route-id="@Model.ClassroomId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
