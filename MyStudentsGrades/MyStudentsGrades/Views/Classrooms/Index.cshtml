@model IEnumerable<MyStudentsGrades.Models.Classroom>

@{
    ViewData["Title"] = "Classrooms";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-hover">
    <thead>
        <tr class="table-primary">
            <th>
                @Html.DisplayNameFor(model => model.NameSchool)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassroomName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SchoolSubject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequiredMedia)
            </th>
            <th>
                Quantity of Students
            </th>
            <th>
                Quantity of Activities
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameSchool)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassroomName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SchoolSubject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequiredMedia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Students.Count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Activities.Count)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
