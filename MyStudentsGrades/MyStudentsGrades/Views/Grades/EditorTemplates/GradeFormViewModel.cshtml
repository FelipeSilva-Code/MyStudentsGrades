@using MyStudentsGrades.Models.ViewModels
@model GradeFormViewModel
<tr>
    <td>
        @Html.HiddenFor(model => model.GradeId)
        @Html.HiddenFor(model => model.ActivityId)
        @Html.HiddenFor(model => model.ActivityName)
        @Html.HiddenFor(model => model.ClassroomId)
        @Html.HiddenFor(model => model.StudentId)
        @Html.EditorFor(model => model.StudentName, new { htmlAttributes = new { @class = "form-control", @disabled = "" } })
        @Html.ValidationMessageFor(model => model.StudentName, "")
    </td>
    <td>
        @Html.EditorFor(model => model.StudentNumber, new { htmlAttributes = new { @class = "form-control", @disabled = ""  } })
        @Html.ValidationMessageFor(model => model.StudentNumber, "", new { @class = "text-danger" })
    </td>
    <td>
        @Html.EditorFor(model => model.Grade, new { htmlAttributes = new { @class = "form-control"} })
        @Html.ValidationMessageFor(model => model.Grade, "", new { @class = "text-danger" })
    </td>
    <td>
        @Html.EditorFor(model => model.Observation, new { htmlAttributes = new { @class = "form-control", @placeholder = "(Without Observation)" } })
        @Html.ValidationMessageFor(model => model.Observation, "", new { @class = "text-danger" })
    </td>
</tr>
